FROM node:18-alpine AS builder

WORKDIR /app

COPY frontened/expense-tracker-app/package*.json ./
RUN npm install

COPY frontened/expense-tracker-app/. .

RUN npm run build


# --- Stage 2: Serve ---
FROM nginx:stable-alpine

COPY --from=builder /app/dist /usr/share/nginx/html

COPY frontened/expense-tracker-app/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
